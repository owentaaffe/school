<p id="notice"><%= notice %></p>

<h1 align="center">Listing Classrooms</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Course :id</th>
      <th>Tutor :id</th>
      <th>:last name</th>
      <th>:first name</th>
      <th>Student :id </th>
      <th>:last name</th>
      <th>:first name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td>Unit: <%= classroom.course_id %></td>
        <td><%= classroom.tutor_id %></td>
        <td><%= classroom.tutor.last_name %></td>
        <td><%= classroom.tutor.first_name %></td>
        <td><%= classroom.student_id%></td>
        <td><%= classroom.student.last_name %></td>
        <td><%= classroom.student.first_name %></td>
        <td>| <%= link_to 'Show', classroom %> |
        <%= link_to 'Edit', edit_classroom_path(classroom) %> |
        <%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %> |
      </tr>
    <% end %>
  </tbody>
</table>

<br>
