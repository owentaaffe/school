<%= link_to 'student', students_path %><br>
<%= link_to 'Tutor', tutors_path %><br>
<%= link_to 'course', courses_path %><br>
<h1>Listing Classrooms</h1>

<table>
  <thead>
    <tr>
      <th>Course |</th>
      <th>Tutor |</th>
      <th>Student |</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.course_id %></td>
        <td><%= classroom.tutor_id %></td>
        <td><%= classroom.student_id %></td>
        <td>| <%= link_to 'Show', classroom %> |</td>
        <td>| <%= link_to 'Edit', edit_classroom_path(classroom) %> |</td>
        <td>| <%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %> |</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

