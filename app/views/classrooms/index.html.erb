<p id="notice"><%= notice %></p>

<h1 align="center">Listing Classrooms</h1>
<%= form_tag classrooms_path, :method => 'get', :last_name => "students_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search Students", :name => nil %>
  </p>
  <div id="classrooms"><%= render 'classrooms' %></div>
<% end %>

<table class="table table-striped",>
    <thead>
      <tr>
        <th><%= sort_link "course_id", "Course id" %></th>
        <th><%= sort_link "tutor_id", "Tutor id" %></th>
        <th><%= sort_link "tutor_last_name", "Last name" %></th>
        <th><%= sort_link "tutor_first_name", "first_name" %></th>
        <th><%= sort_link "student_id", "Student id" %></th>
        <th><%= sort_link "student_last_name", "last_name" %></th>
        <th><%= sort_link "student_first_name", "first_name" %></th>
        <th colspan="8"></th>
      </tr>
    </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td>Unit: <%= classroom.course_id %></td>
        <td><%= classroom.tutor_id %></td>
        <td><%= classroom.tutor.last_name %></td>
        <td><%= classroom.tutor.first_name %></td>
        <td><%= classroom.student_id%></td>
        <td><%= classroom.student.last_name %></td>
        <td><%= classroom.student.first_name %></td>
        <td>| <%= link_to 'Show', classroom %> |
        <%= link_to 'Edit', edit_classroom_path(classroom) %> |
        <%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %> |
      </tr>
    <% end %>
  </tbody>
</table>
<br>
| <%= link_to 'New Classroom', new_classroom_path %> |
