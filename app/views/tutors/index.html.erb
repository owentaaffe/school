<p id="notice"><%= notice %></p>
<div align="center">
  <h1>Listing Tutors</h1>
  <%= will_paginate %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Tutor Id:</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th> 
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutors.each do |tutor| %>
      <tr>
        <td><%= tutor.id %></td>
        <td><%= tutor.first_name %></td>
        <td><%= tutor.last_name %></td>
        <td><%= tutor.email %></td> 
        <td><%= link_to 'Show', tutor %> |
        <%= link_to 'Edit', edit_tutor_path(tutor) %> |
        <%= link_to 'Destroy', tutor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div align="center">
  <%= will_paginate %>
</div>
<br>

<%= link_to 'New Tutor', new_tutor_path %>
