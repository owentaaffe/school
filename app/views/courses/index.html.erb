
<div align="center">
  <h1>Listing Courses</h1>
  <%= will_paginate %><br>
  <%= link_to 'New Course', new_course_path, class: 'btn btn-primary btn-lg' %><br />
</div><br />
 <% @course.each do |course| %>
<div class="panel panel-default">
  <div class="panel-heading panel-success">
    <h3 class="panel-title"><strong>Title:</strong> <%= course.title %></h3>
  </div>
  <div class="panel-body"><strong>Description: </strong>
    <%= course.description %>
  </div>
  <div class="panel-footer">
    <%= link_to 'Show', course %>
    <%= link_to 'Edit', edit_course_path(course) %>
    <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
<% end %>
<div align="center">
  <%= will_paginate %>
</div>

<%= link_to 'New Course', new_course_path, class: 'btn btn-primary btn-lg' %>