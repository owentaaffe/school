<h1 align="center">Listing Courses</h1>
  <h4 align="center"><%= link_to 'Create new Course', new_course_path %></h4><br>
<% @courses.each do |course| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="course-title">
          <h1 align="center"><strong>Title: </strong>
            <%= link_to course.title, course_url(course) %>
          </h1>
        </div>
        <div class="article-body">
          <h3>Description:</h3>
           <p><%= course.description %></p>
          </div><br>

            
            <td><%= link_to 'Show course details', course %></td> |
            <td><%= link_to 'Edit', edit_course_path(course) %></td> |
            <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </div>
      </div>
    </div>

    <% end %>
  <div class="col-xs-4 col-xs-offset-2">
    <%= link_to 'New Course', new_course_path %>
  </div>





